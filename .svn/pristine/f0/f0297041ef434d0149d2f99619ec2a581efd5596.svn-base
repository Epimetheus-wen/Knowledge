@-webkit-keyframes myfirst {
0% {
    -webkit-transform: translateY(10rpx);
            transform: translateY(10rpx);
    opacity: 0;
}
10% {
    -webkit-transform: translateY(0rpx);
            transform: translateY(0rpx);
    opacity: 1;
}
90% {
    -webkit-transform: translateY(0rpx);
            transform: translateY(0rpx);
    opacity: 1;
}
100% {
    -webkit-transform: translateY(-40rpx);
            transform: translateY(-40rpx);
    opacity: 0;
}
}
@keyframes myfirst {
0% {
    -webkit-transform: translateY(10rpx);
            transform: translateY(10rpx);
    opacity: 0;
}
10% {
    -webkit-transform: translateY(0rpx);
            transform: translateY(0rpx);
    opacity: 1;
}
90% {
    -webkit-transform: translateY(0rpx);
            transform: translateY(0rpx);
    opacity: 1;
}
100% {
    -webkit-transform: translateY(-40rpx);
            transform: translateY(-40rpx);
    opacity: 0;
}
}
.load_icon {
